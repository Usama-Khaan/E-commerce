<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 400px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);">
    <div class="card-header text-center" style="background-color: #007BFF; color: #fff;">
      <h2>Resend confirmation instructions</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "Resend confirmation instructions", class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
