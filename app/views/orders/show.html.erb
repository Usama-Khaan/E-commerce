<div class="container">
  <div class="card mb-3 shadow bg-white">
    <div class="text-center card-header border-white bg-white">
      <h2>Order Summary</h2>
    </div>
    <div class="card-body border-white">
      <div class="row">
        <div class="col-md-6">
          <div class="order-details">
            <p><strong>Email:</strong> <%= @order.email %></p>
            <p><strong>Shipping Address:</strong></p>
            <p><%= @order.first_name %> <%= @order.last_name %></p>
            <p><%= @order.address %></p>
            <p><%= @order.city %>, <%= @order.country %> <%= @order.postal_code %></p>
            <p><strong>Phone Number:</strong> <%= @order.phone_number %></p>
            <div class="text-center">
              <button class="btn btn-warning order-button">Complete Order</button>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div>
            <div class="card mb-4 shadow container-fluid">
              <h3 class="text-center">Cart Products</h3>
              <% total_cost = 0 %>
              <div class="scrollable-products" style="max-height: 300px; overflow-y: auto; overflow-x: hidden;">
                <% @order.cart.line_items.each do |line_item| %>
                  <div class="row g-0">
                    <div class="col-md-4">
                      <%= image_tag(line_item.product.image, class: "img-fluid rounded-start product-image", alt: line_item.product.title) %>
                    </div>
                    <div class="col-md-8">
                      <div class="card-body">
                        <h5 class="card-title"><%= line_item.product.title %></h5>
                        <p class="card-text">Quantity: <%= line_item.line_items_quantity %></p>
                        <p class="card-text">Price: <%= number_to_currency(line_item.product.price) %></p>
                      </div>
                    </div>
                  </div>
                  <% total_cost += line_item.product.price * line_item.line_items_quantity %>
                <% end %>
              </div>
              <div class="total-cost text-right bg-white">
                <h5>Total Cost: <%= number_to_currency(total_cost) %></h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
