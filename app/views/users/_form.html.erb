<%= form_with model: user do |form| %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
    <% user.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_area :email %><br>
    <% user.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :role_id, 'Assign Role:' %>
    <%= form.select :role_id, Role.all.map { |role| [role.name, role.id] }, {}, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
